<section>
  <h2>Create New Project</h2>
  <form class="new-project-form" data-user-id="{{user.id}}">
    <div>
      <input type="text" id="project-title" name="project-title" placeholder="Title" />
    </div>
    <button type="submit" id="create-project-btn" class="btn">Create</button>
  </form>
</section>

{{!-- {{log user}} --}}
{{#if user.projects.length}}
<section>
  {{#each user.projects}}
    <p><a href="/dashboard/edit/{{id}}">{{title}}</a></p>
    <p>{{pluralize "task" tasks.length}}</p>
  {{/each}}
</section>
{{/if}}

<script src="/javascript/add-project.js"></script>