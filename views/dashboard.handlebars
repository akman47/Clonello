<div class="modal modal-instructions">
  <div class="how-to">
    <h2>New to Clonello?</h2>
    <span>Let's get you started!</span>
    <div class="carousel-wrapper">
        <div class="carousel">

          <div class="carousel-content initial">
            <img class="carousel-photo" src="/images/create-project.gif"></img>
            <div class="info-container">
                <h4>Set up a new project</h4>
                <span>Enter project title and select the newly created project</span>
            </div>
          </div>
          
          <div class="carousel-content">
            <img class="carousel-photo" src="/images/manage-project.gif"></img>
            <div class="info-container">
              <h4>Manage project</h4>
              <span>Invite other members to join the project and edit the project's title</span>
            </div>
          </div>

          <div class="carousel-content">
            <img class="carousel-photo" src="/images/add-task.gif"></img>
            <div class="info-container">
              <h4>Create tasks</h4>
              <span>Add tasks, assign to project member, and provide a status</span>
            </div>
          </div>

          <div class="carousel-content">
            <img class="carousel-photo" src="/images/add-status.gif"></img>
            <div class="info-container">
              <h4>Manage task status</h4>
              <span>Create custom statuses or delete obsolete ones</span>
            </div>
          </div>

          <div class="carousel-content">
            <img class="carousel-photo" src="/images/edit-task.gif"></img>
            <div class="info-container">
                <h4>Update tasks</h4>
                <span>Reassign task to another project member or update task status and title</span>
            </div>
          </div>

          <div class="carousel-btn--next"></div>
          <div class="carousel-btn--prev"></div>
        </div>
    </div>

    <div class="footer-how-to">
      <div>
        {{!-- checkbox to hide modal --}}
        <input type="checkbox" id="instructions" name="instructions" value="hide">
        <label for="instructions">Don't show again at startup</label><br>
      </div>
      <button type="button" id="hide-howto" class="btn">Close</button>
    </div>
  </div>
</div>

<section class="create-project">
  <h2 id="project-form-header">Create New Project</h2>
  <form class="new-project-form" data-user-id="{{user.id}}"></form>
    <div>
      <input type="text" id="project-title" name="project-title" placeholder="Title" />
    </div>
    <br>
    <button type="submit" id="create-project-btn" class="btn">Create</button>
  </form>
</section>

{{#if user.projects.length}}
<section class="project-display">
  <ul class="project-list">
  {{#each user.projects}}
    <li>
      <button class="btn access-project-btn"><a href="/dashboard/edit/{{id}}">{{title}}</a></button>
      ({{pluralize "task" tasks.length}})
    </li>
  {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-project.js"></script>
<script src="/javascript/instructions.js"></script>