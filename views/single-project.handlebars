{{!-- invite user modal --}}
<section class="modal modal-invite-user">
        <div class="invite-user">
            <h2>Invite New Project Member</h2>
            <form class="add-user-form" data-project-id="{{project.id}}">
                <div class="form-input user-menu">
                    <label for="invite-user-menu">Choose a user to invite: </label>
                    <select name="invite-user-menu" id="invite-user-menu">
                        {{#each users}}
                        <option value="{{username}}-id{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-invite-user">Add User</button>
                <button type="button" class="btn btn-close-invite-modal">Close</button>
            </form>
        </div>
</section>

{{!-- add task modal --}}
<section class="modal modal-add-task">
        <div class="add-task">
            <h2>Add Project Task</h2>
            <form class="new-task-form" data-project-id="{{project.id}}">
                <div class="form-input">
                    <input type="text" id="new-task" name="new-task" placeholder="Task" />
                </div>
                <div class="form-input user-menu">
                    <select name="user-menu" id="task-user-menu">
                        <option disabled selected value>Assign Task To: </option>
                        {{#each project.users}}
                        <option value="{{username}}-id{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-input status-menu">
                    <select name="status-menu" id="status-menu">
                        <option disabled selected value>Select Task Status</option>
                        {{#each status}}
                        <option value="{{title}}-id{{id}}">{{title}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn" id="btn-add-task">Add Task</button>
                <button type="button" class="btn" id="close-task-modal">Close</button>
            </form>
        </div>
    </div>
</section>

{{!-- add status modal --}}
<section class="modal modal-add-status">
    <div class="add-status">
        <h2>Add Task Status</h2>
        <form class="new-status">
            <div>
                <input type="text" id="new-status-text" name="new-status-text" placeholder="To Do" />
            </div>
            <button type="click" id="btn-add-status" class="btn">Add Status</button>
            <button type="button" class="btn" id="close-status-modal">Close</button>
        </form>
    </div>
</section>

{{!-- delete status modal --}}
<section class="modal modal-delete-status">
    <div class="delete-status">
        <h2>Delete Task Status</h2>
        <form class="delete">
            <select name="delete-status-menu" id="status-menu">
                <option disabled selected value>Select Task Status</option>
                    {{#each status}}
                    <option value="{{title}}-id{{id}}">{{title}}</option>
                    {{/each}}
            </select>
            <div class="btn-container">
                <button type="click" id="btn-delete-status" class="btn">Delete</button>
                <button type="button" class="btn" id="close-delete-modal">Close</button>
            </div>
        </form>
    </div>
</section>

{{!-- main single-project view --}}
<div>
    <a class="back" href="/dashboard"> &larr; Back to Dashboard</a>
    <div class="project-header">
        <div class="header-el">
            <ul class="member-list">
                <h2>Members:</h2>
                {{#each project.users}}
                    <li>{{username}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="header-el">
            <h2 class="project-title-display">{{project.title}}</h2>
        </div>
        <div class="header-el">
            <button type="button" class="btn btn-open-invite-modal" id="invite-btn">Invite Project Member</button><br>
            <button type="button" class="btn" id="delete-project-btn">Delete Project</button><br>
            <button type="button" class="btn" id="open-status-modal">Create New Status</button><br>
            <button type="button" class="btn" id="open-delete-modal">Delete Status</button>
        </div>
    </div>
    <div class="add-task-div">
        <button type="button" class="btn add-task-btn" id="open-task-modal">Add Task</button>
    </div>
    <div class="task-display">
        {{#each project.tasks}}
        <div class="card">
            <p id="task-title" class="task-text-{{id}}" data-task-id="{{id}}">{{task_text}}</p>
            <p class="task-user" data-user-id="{{user.id}}">Assigned To: {{user.username}}</p>
            <p class="task-status" data-status-id="{{status.id}}">Status: {{status.title}}</p>
            <div class="task-btns">
                <button type="button" class="btn btn-edit" data-task-id="{{id}}">Edit Task</button>
                <button type="button" class="btn btn-delete" data-task-id="{{id}}">Delete Task</button>
            </div>
        </div>
        {{/each}}
    </div>
</section>

