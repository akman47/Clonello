<div class="account">
    <div class="account-header">
        <h2>Sign Up</h2>
        <p>Fill out the form to unlock access to your collaborative workspace!</p>
    </div>
    <form class="signup-form">
        <div>
            <input type="text" name="email-signup" id="email-signup" placeholder="Email">
        </div>
        <div>
            <input type="text" id="username-signup" placeholder="Username" />
        </div>
        <div>
            <input type="text" id="password-signup" placeholder="Password" />
        </div>
        <div>
            <button type="submit" id="signup" class="btn btn-signup">Sign Up</button>
        </div>
        <div>
            <button id="login" class="btn-no-style"><a href="/login">Already have an account? Log in!</a></button>
        </div>
    </form>
</div>

<script src="/javascript/signup.js"></script>